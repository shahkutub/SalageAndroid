<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dim10"
        android:layout_marginRight="@dimen/dim10"
        android:layout_marginLeft="@dimen/dim10"
        android:background="@drawable/document_product_part_bg"
        >

        <TextView
            android:id="@+id/tvViewNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""
            android:padding="@dimen/dim5"
            android:singleLine="true"
            android:inputType="textUri"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginTop="@dimen/dim10"
            />

        <EditText
            android:id="@+id/etProName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="product name"
            android:textSize="15sp"
            android:layout_margin="@dimen/dim10"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:inputType="textUri"
            android:visibility="visible"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            />

        <ListView
            android:id="@+id/listProName"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"></ListView>

        <LinearLayout
            android:id="@+id/linProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dim10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dim10"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            >


            <Spinner
                android:id="@+id/spinnerProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim20"
                ></Spinner>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginTop="@dimen/dim10"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discrizione"
            android:textSize="15sp"
            android:layout_margin="@dimen/dim10"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:inputType="textUri"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            android:id="@+id/etDescript" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginTop="@dimen/dim10"
            />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantita"
            android:textSize="15sp"
            android:layout_margin="@dimen/dim10"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:inputType="textUri"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginTop="@dimen/dim10"
            />

        <EditText
            android:id="@+id/etLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lista"
            android:textSize="15sp"
            android:layout_margin="@dimen/dim10"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:inputType="textUri"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginTop="@dimen/dim10"
            />

        <EditText
            android:id="@+id/etScont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="totali"
            android:textSize="15sp"
            android:layout_margin="@dimen/dim10"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:inputType="textUri"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"

            >
            <ImageView
                android:id="@+id/imgMinus"
                android:layout_width="@dimen/dim35"
                android:layout_height="@dimen/dim35"
                android:layout_marginRight="@dimen/dim20"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                />


            <ImageView
                android:layout_width="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_height="@dimen/dim30"
                android:visibility="gone"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>