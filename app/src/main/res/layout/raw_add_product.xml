<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim10"
        android:layout_marginRight="@dimen/dim10"
        android:background="@drawable/document_product_part_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvViewNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:padding="@dimen/dim5"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Name" />

        <EditText
            android:id="@+id/etProNameSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="product name"
            android:inputType="textUri"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etProName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim10"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            android:hint="product name"
            android:inputType="textUri"
            android:padding="@dimen/dim10"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listProName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:visibility="gone"></ListView>

        <LinearLayout
            android:id="@+id/linProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dim10"
            android:visibility="gone">


            <Spinner
                android:id="@+id/spinnerProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim20"></Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Description" />

        <EditText
            android:id="@+id/etDescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/edittext_bg"
            android:hint="Discrizione"
            android:inputType="textUri"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Quantity" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="Quantita"
            android:inputType="number"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Price" />

        <EditText
            android:id="@+id/etLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="Lista"
            android:inputType="numberDecimal"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Sub Total" />

        <EditText
            android:id="@+id/etSubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="Total"
            android:inputType="numberDecimal"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Discount" />

        <EditText
            android:id="@+id/etDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="Discount"
            android:inputType="numberDecimal"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:text="Product Total(After Discount)" />

        <EditText
            android:id="@+id/etTotAfDis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim8"
            android:background="@drawable/edittext_bg"
            android:hint="Total"
            android:inputType="numberDecimal"
            android:padding="@dimen/dim8"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dim8"

            >

            <ImageView
                android:id="@+id/imgMinus"
                android:layout_width="@dimen/dim35"
                android:layout_height="@dimen/dim35"
                android:layout_marginRight="@dimen/dim20"
                android:src="@drawable/ic_remove_circle_outline_black_24dp" />


            <ImageView
                android:layout_width="@dimen/dim30"
                android:layout_height="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim20"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>