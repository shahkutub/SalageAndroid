<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    >
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="#4F5A78"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/topViewNewList">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/catHeadText"
            android:textColor="@color/whiteMy"
            android:textSize="20sp"
            android:text="Product"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

        <ImageView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/dim10"
            android:id="@+id/dissmissCatListBtn"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/topViewNewList"
        android:layout_marginTop="@dimen/dim20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/product_bg"

        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"
                android:text="Codice/barcode"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"
                android:text=""
                android:hint="codice/barcode"
                android:background="#ffffff"
                android:padding="@dimen/dim10"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"
                android:text="prodotti"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"
                android:text="prodotti"
                android:background="#ffffff"
                android:padding="@dimen/dim10"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="@dimen/dim15"
                android:padding="@dimen/dim10"
                android:text="class"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:background="#D6D7D7"
                >


            <Spinner
                android:id="@+id/spinnerClass"
                android:layout_width="match_parent"
                android:spinnerMode="dialog"
                android:layout_height="match_parent"
                ></Spinner>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim50"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="@dimen/dim15"
                android:padding="@dimen/dim5"
                android:text="sottoclass"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#D6D7D7"
                >
                <Spinner
                    android:id="@+id/spinnerSottoClass"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></Spinner>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim50"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="@dimen/dim15"
                android:padding="@dimen/dim10"
                android:text="marche"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#D6D7D7"
                >
                <Spinner
                    android:id="@+id/spinnerMarche"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></Spinner>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim5"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="action"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"
                android:background="@color/gray"
                android:text="CERCA"
                android:gravity="center"
                android:layout_height="@dimen/dim50"
                />
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dim10"
            android:padding="@dimen/dim20"
            android:visibility="gone"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim15"
                android:text="Show"
                />

            <Spinner
                android:id="@+id/spinnerPaginator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                ></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/dim15"
                android:text="Entries"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
        </LinearLayout>

        <ListView
            android:id="@+id/listProDetails"
            android:layout_width="match_parent"
            android:scrollbarSize="@dimen/dim10"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:layout_marginTop="@dimen/dim10"
            android:layout_height="match_parent"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim5"
            android:visibility="gone"
            android:textSize="@dimen/dim15"
            android:gravity="center"
            android:text="Showing 0 to 0 of 0 entries"
            android:id="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/dim5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim15"
                android:text="Privious"
                android:layout_marginRight="@dimen/dim10"
                />

            <TextView
                android:layout_width="@dimen/dim30"
                android:layout_height="@dimen/dim30"
                android:textSize="@dimen/dim15"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/edittext_bg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/dim15"
                android:text="Next"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>