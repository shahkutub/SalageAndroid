<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim70"
        android:background="#D6D7D7"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dim20"
        android:paddingLeft="@dimen/dim20"

        >
     <TextView
         android:id="@+id/tvCtName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:text="wwe"
         android:textColor="@color/black"
         android:layout_alignParentLeft="true"
         />

     <ImageView
         android:id="@+id/imageView"
         android:layout_width="@dimen/dim10"
         android:layout_height="@dimen/dim10"
         android:layout_marginTop="@dimen/dim5"
         android:layout_alignParentRight="true"
         android:visibility="gone"
         android:src="@drawable/ic_launcher" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="1dp"/>
</LinearLayout>
