<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FfFfFf"
    >

    <TextView
        android:layout_below="@+id/topViewNewList"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim10"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim10"
        android:textSize="@dimen/dim15"
        android:text="Messigio di stato"
        android:id="@+id/textView4" />


    <LinearLayout
        android:id="@+id/spinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#D4D4D4"
        android:layout_marginTop="@dimen/dim10"
        android:layout_below="@+id/linPlus"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Show"
            />

        <Spinner
            android:id="@+id/spinnerDocClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Entries"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:layout_below="@+id/spinView"
        android:id="@+id/listDocDetails"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottomPro"
        android:layout_marginBottom="@dimen/dim10"
        android:layout_height="wrap_content"></ListView>
<LinearLayout
    android:id="@+id/bottomPro"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5"
        android:textSize="@dimen/dim15"
        android:gravity="center"
        android:text="Showing 0 to 0 of 0 entries"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dim5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Privious"
            android:layout_marginRight="@dimen/dim10"
            />

        <TextView
            android:layout_width="@dimen/dim30"
            android:layout_height="@dimen/dim30"
            android:textSize="@dimen/dim15"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Next"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:background="#4F5A78"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/topViewNewList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/catHeadText"
            android:textColor="@color/whiteMy"
            android:textSize="20sp"
            android:text="DOCUMENTI"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

        <ImageView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/dim10"
            android:id="@+id/dissmissCatListBtn"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edittext_bg"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            android:textSize="@dimen/dim15"
            android:text="Messigio di stato"
            android:id="@+id/textView2" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dim30"
            android:layout_height="@dimen/dim30"
            android:src="@mipmap/ic_add_circle_outline_black_24dp"
            android:layout_marginRight="@dimen/dim10"
            />

    </LinearLayout>
</RelativeLayout>