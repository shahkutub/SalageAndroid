<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FfFfFf"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim10"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim10"
        android:textSize="@dimen/dim15"
        android:text="Messigio di stato"
        android:id="@+id/textView4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dim10"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim10"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/edittext_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            android:textSize="@dimen/dim15"
            android:text="Messigio di stato"
            android:id="@+id/textView2" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:src="@mipmap/ic_add_circle_outline_black_24dp"
            android:padding="@dimen/dim5"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim10"
        android:layout_marginBottom="@dimen/dim10"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Show"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Entries"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:background="@drawable/edittext_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Id"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="No data available in table"
                android:layout_height="wrap_content" />
        </LinearLayout>





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim10"
        android:textSize="@dimen/dim15"
        android:gravity="center"
        android:text="Showing 0 to 0 of 0 entries"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Privious"
            android:layout_marginRight="@dimen/dim10"
            />

        <TextView
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:textSize="@dimen/dim15"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/dim15"
            android:text="Next"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>