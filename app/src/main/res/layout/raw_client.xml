<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:background="@drawable/edittext_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Id"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvAgentId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Entries"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Customer Name"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Entries"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Address"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/dim15"

                android:text="Entries"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
            android:layout_marginBottom="@dimen/dim10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:textSize="@dimen/dim15"

                android:text="Change"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="@dimen/dim30"
                    android:textSize="@dimen/dim15"
                    android:text="Entries"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:layout_height="@dimen/dim30" />
                <ImageView
                    android:layout_width="@dimen/dim30"
                    android:textSize="@dimen/dim15"
                    android:text="Entries"
                    android:layout_marginLeft="@dimen/dim20"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:layout_height="@dimen/dim30" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>